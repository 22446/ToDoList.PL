@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-action="Edit" , enctype="multipart/form-data">
    <div class="form-row">
       

        <div class="form-group col-md-12">
            <label asp-for="Fname">First Name</label>
            <input asp-for="Fname" class="form-control">
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Lname"></label>
            <input asp-for="Lname" class="form-control ">
        </div>
        
        <div class="form-group col-md-12">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" readonly>
        </div>
        <input type="submit" value="Submit" asp-action="Edit" class="btn btn-primary">
        <button asp-action="Index" class="btn btn-info">Back</button>
    </div>
</form>