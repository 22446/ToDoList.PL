@model UserViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="form-row">
    <div class="form-group col-md-12">
        <label asp-for="Id">Id : </label>
        <input asp-for="Id" class="form-control" readonly>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="Fname">First Name</label>
        <input asp-for="Fname" class="form-control" readonly>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Lname"></label>
        <input asp-for="Lname" class="form-control "readonly>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" readonly>
    </div>
    <input type="submit" value="Edit" asp-action="Edit" class="btn btn-primary">
    <button asp-action="Index" class="btn btn-info">Back</button>
</div>
