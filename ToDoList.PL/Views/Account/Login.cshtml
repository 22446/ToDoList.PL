@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}
<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="Login">
           <div asp-validation-summary="All"></div>
            <input asp-for="Email" placeholder="Enter Your Email">
            <span asp-validation-for="Email"></span>
            <br>
            <input asp-for="Password" placeholder="Enter Your Password">
            <span asp-validation-for="Password"></span>
            <br>
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input  type="submit" value="LogIn">
        </form>
        <p>Don't have an Account? <a asp-action="Register">Register Now!</a></p>
        <p><a asp-action="ForgetPassword">Forget Your Password !</a></p>

       
    </div>
</div>
@section ValidationForRegister{
    <partial name="_ValidationScriptsPartial" />

}
